<h1>Blog Post</h1>
    <div>
        <%@blog_posts.each do |posts| %>
        <h2><%= link_to posts.title, posts%></h2>
        <% if posts.draft? %>
            <div class="p-2 rounded bg-gray-100 text-gray-900">Draft</div>
        <% elsif posts.scheduled? %>
            <div class="p-2 rounded bg-blue-100 text-blue-900">Scheduled</div>
        <% end %>
        <%=posts.content%>
    </div>
<%end%>
<% if @pagy.count>@pagy.items%>
    <div class="my-16">
        <%== pagy_nav(@pagy) %>
    </div>
<% end %>